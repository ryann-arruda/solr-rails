<div class="search-result">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Address</th>
        <th scope="col">City</th>
        <th scope="col">Zip-code</th>
        <th scope="col">Company</th>
        <th scope="col">Company description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= result.first_name %></td>
        <td><%= result.last_name %></td>
        <td><%= result.email %></td>
        <td><%= result.address %></td>
        <td><%= result.city %></td>
        <td><%= result.zip_code %></td>
        <td><%= result.company %></td>
        <td><%= result.company_description %></td>
        <td><%= link_to 'Show', result, class:"badge badge-secondary"%></td>
        <td><%= link_to 'Edit', edit_user_path(result), class:"badge badge-info"%></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' }, class:"badge badge-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
